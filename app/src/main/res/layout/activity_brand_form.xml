<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrandForm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".brandLog">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Brand Registration Form"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/brandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Brand Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/contactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Owner Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Email Adress"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Contact No"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Product Details"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Product Names"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/text_background"
                    android:gravity="top"
                    android:hint="Enter Products Description"
                    android:inputType="text"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnUploadImage"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/btn_primary"
                    android:text="Upload products Images"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivProductImages"
                    android:layout_width="317dp"
                    android:layout_height="123dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dp"
                    android:contentDescription="Product Images"
                    android:src="@drawable/undraw_upload_re_pasx__2_" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Discount Details"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/text_background"
                    android:hint="Enter Discount Percentage"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etValidityPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/text_background"
                    android:hint="Validity Period (in days)"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etTermsAndConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/text_background"
                    android:gravity="top"
                    android:hint="Terms and Conditions"
                    android:inputType="text"
                    android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_primary"
                    android:layout_marginStart="32dp"
                    android:text="save"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_primary"
                    android:layout_marginStart="32dp"
                    android:text="cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
        </LinearLayout>
        </LinearLayout>
</ScrollView>

